source 'https://rubygems.org'

gem 'rake'

## JEKYLL AND CUSTOM DEPS
group :layout do
  gem 'haml'
end

group :jekyll_and_deps do
  gem 'rouge'
  gem 'nokogiri'
  gem 'mercenary'
  gem 'liquid'
  gem 'jekyll'
  gem 'webrick'
  gem 'wdm', '>= 0.1.0' if Gem.win_platform?
end

## JEKYLL PLUGINS AVAILABLE AS GEMS
group :jekyll_plugins do
  gem 'jekyll-sitemap'
  gem 'jekyll-paginate'
  gem 'liquid_reading_time'
end

