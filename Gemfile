source 'https://rubygems.org'

gem 'rake'

## JEKYLL AND CUSTOM DEPS
group :layout do
  gem 'haml'
end

group :styling do
  gem 'sass'
  gem 'bourbon'
  gem 'neat'
  gem 'bitters'
end

group :jekyll_and_deps do
  gem 'gemoji'
  gem 'rouge'
  gem 'RedCloth'
  gem 'rdiscount'
  gem 'nokogiri'
  gem 'mercenary'
  gem 'therubyracer', :platforms => :ruby
  gem 'liquid'
  gem 'jekyll'
end

## JEKYLL PLUGINS AVAILABLE AS GEMS
group :jekyll_plugins do
  gem 'jekyll-sitemap'
  gem 'jekyll-paginate'
  gem 'liquid_reading_time'
end

